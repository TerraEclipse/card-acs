<DOCTYPE html>
  <html>
    <head>
      {{{styles}}}
      <script src="//use.typekit.net/uyf8thm.js"></script>
      <script>try{Typekit.load();}catch(e){}</script>
    </head>
    <body>
      <div class="content">
        <div class="date-location">
          <div class="date">{{date}}</div>
          <div class="location">{{location}}</div>
        </div>
        <div class="user-info">
          <div class="avatar">
              <span class="avatar-image" style="background-image: url({{{avatar}}});"></span>
          </div>
          <div class="signature">
            <div class="name">{{first}} {{last}}</div>
            <div class="city">
              {{{city}}}
              {{#if city}}
                {{#if state}} , {{/if}}
              {{/if}}
              {{#if city}}
                {{state}}
              {{else}}
                {{state_full}}
              {{/if}}
            </div>
          </div>
        </div>
      </div>
    </body>
  </html>